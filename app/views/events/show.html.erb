<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @event.title %>
</p>

<p>
  <strong>Start time:</strong>
  <%= @event.start_time %>
</p>

<p>
  <strong>End time:</strong>
  <%= @event.end_time %>
</p>

<p>
  <strong>Description:</strong>
  <%= @event.description %>
</p>

<div id= "preview_images">
	<% @event.pictures.each do |p|%>
		<p>
			<%= image_tag p.image.url %>
			<%= link_to 'Destroy Image', "/pictures/#{p.id}/destroy", method: :delete, data: { confirm: 'Are you sure?'} %>
		</p>
	<% end %>
</div>

<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %> |
<%= link_to 'Destroy', "/events/#{@event.id}/destroy", method: :delete, data: { confirm: 'Are you sure?' } %>

