</div>

<style>
	#calendar {
		width: 100%;
		height: 50%;
	}
</style>

<script>
	$(document).ready(function(){
		$('#calendar').fullCalendar({
			weekMode: 'liquid',
			events:'/events'
		});
	});
</script>

